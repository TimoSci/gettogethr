<div class="item-col col-md-3">
  <div class="place-box panel panel-solid-danger" id="place-<%= place.id %>">
    <div class="item panel-heading">
      <h3 class="panel-title"><%= place.name %></h3>
      <div class="actions pull-right">
        <i class="fa fa-chevron-up"></i>
      </div>
    </div>
    <div class="panel-body">
      <p>
        <%= place.user.name %> suggests:<br>
        <%= place.name %>
      </p>
      <%= button_to "X", gathering_place_path(@gathering, place), method: :delete, remote: true, class: 'btn btn-xs', style:"display:inline-block;" %>
    </div>
    <div class="panel-footer">
      <%= render partial: '/votes/form', locals:{ votable: place, gathering: @gathering } %>
    </div>
  </div>
</div>

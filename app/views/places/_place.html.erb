<div class="item-col col-md-12">
  <div class="place-box panel panel-solid-danger" id="place-<%= place.id %>">
    <div class="panel-heading">
      <h3 class="panel-title"><%= place.name %></h3>
      <div class="actions pull-right">
        <i class="fa fa-chevron-down"></i>
        <i class="fa fa-times"></i>
      </div>
    </div>
    <div class="panel-body">
      <p>
        <%= place.user %> has suggested the following gathering place:
        <%= place.name %>
      </p>
      <%= button_to "X", gathering_place_path(@gathering, place), method: :delete, remote: true %>
    </div>
    <div class="panel-footer">
      <%= render partial: '/votes/form', locals:{ votable: place, gathering: @gathering } %>
    </div>
  </div>
</div>

<div class="col-md-3 ">

  <!-- offset this shit -->
  <div class="sessions log-in panel">

    <div class="panel-heading">

      <h2>Log in</h2>

    </div>

    <div class="panel-body">

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="text field">
          <!-- <%# f.label :email %><br /> -->
          <%= f.email_field :email, placeholder:"Email", class:"text" %>
        </div>

        <div class="text field">
          <!-- <%# f.label :password %><br /> -->
          <%= f.password_field :password, autocomplete: "off", placeholder:"Password", class:"text" %>
        </div>

        <div class="submit">
          <%= f.submit "Log in", class:"btn" %>
        </div>

        <%- resource_class.omniauth_providers.each do |provider| %>
          <div class="submit google">
            <%= button_to "Log in with Google", omniauth_authorize_path(resource_name, provider), class:"btn btn-info" %>
          </div>
        <% end -%>

        <% if devise_mapping.rememberable? -%>
          <div class="rememberable field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>
      <% end %>


      <div class="devise-links">

        <%= render "devise/shared/links" %>

      </div>

    </div>

  </div>

</div>

$("#<%= @votable.class.to_s.downcase %>-<%= @votable.id %> .thumbs-up .vote-count").text("<%= vote_count(@votable,1) %>");
$("#<%= @votable.class.to_s.downcase %>-<%= @votable.id %> .shruggie .vote-count").text("<%= vote_count(@votable,0) %>");
$("#<%= @votable.class.to_s.downcase %>-<%= @votable.id %> .thumbs-down .vote-count").text("<%= vote_count(@votable,-1) %>");

<% current_vote = vote(current_user,@votable) %>

var voted_class = "btn-success";
// var voted_class = <%= j voted_class %>;

$("#<%= @votable.class.to_s.downcase %>-<%= @votable.id %> .btn").removeClass(voted_class);

<% if current_vote %>
$("#<%= @votable.class.to_s.downcase %>-<%= @votable.id %> .<%=class_mapping(current_vote.value)%> ").addClass(voted_class);
<% end %>

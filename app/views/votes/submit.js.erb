$("#<%= @votable.class.to_s.downcase %>-<%= @votable.id %> .thumbs-up .vote-count").text("<%= vote_count(@votable,1) %>")
$("#<%= @votable.class.to_s.downcase %>-<%= @votable.id %> .shruggie .vote-count").text("<%= vote_count(@votable,0) %>")
$("#<%= @votable.class.to_s.downcase %>-<%= @votable.id %> .thumbs-down .vote-count").text("<%= vote_count(@votable,-1) %>")

<% current_vote = vote(current_user,@votable) %>

$("#<%= @votable.class.to_s.downcase %>-<%= @votable.id %> .thumbs-up").removeClass("btn-success")
$("#<%= @votable.class.to_s.downcase %>-<%= @votable.id %> .shruggie").removeClass("btn-success")
$("#<%= @votable.class.to_s.downcase %>-<%= @votable.id %> .thumbs-down").removeClass("btn-success")

<% if current_vote %>
$("#<%= @votable.class.to_s.downcase %>-<%= @votable.id %> .<%=class_mapping(current_vote.value)%> ").addClass("btn-success")
<% end %>

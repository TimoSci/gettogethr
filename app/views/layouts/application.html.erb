<!DOCTYPE html>
<html>
<head>
  <title>Gettoget.hr</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <header>
      <div class="row">
        <h1 class="col-xs-8">gettoget.hr</h1>
        <nav aria-labelledby="user-navigation" class="user-menu text-right col-xs-4" role="navigation">
          <%- if logged_in? -%>
            <%= render 'layouts/logged_in' %>
          <%- else -%>
            <%= render 'layouts/logged_out' %>
          <%- end -%>
        </nav>
      </div>
      <div class="row">
        <nav aria-labelledby="main-navigation" class="navbar navbar-default">
          <div class="container-fluid">
            <ul class="nav navbar-nav">
              <li><%= link_to 'Home', root_path %></li>
              <li><%= link_to 'Gatherings', gatherings_path if logged_in? %></li>
            </ul>
          </div>
        </nav>
      </div>
    </header>
  </div>
  <%- if !flash.empty? -%>
  <div class="container panel panel-default">
    <%- flash.each do |note, msg| -%>
      <div class="panel-body flash <%= note %>"><%= msg %></div>
    <%- end -%>
  </div>
  <%- end -%>

  <div class="container">
    <%= yield %>
  </div>





</body>
</html>

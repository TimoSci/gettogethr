<script id="finalized-template" type="text/x-jsrender">
  <div class="row finalize-plan-row">
    <div class="col-md-10">
      <div class="title-box panel final-plan-panel">

        <div class="panel-heading final-plan-heading">
          <div class="title-container final" id="gathering-title-container">
            <h4>The Plan:</h4>
          </div>
        </div>

        <div class="panel-body final-plan-body">
          <p>
            The gathering has been finalized.<br>
            {{if place}}
            <strong>Place: </strong>{{:place}}<br>
            {{/if}}
            {{if moment}}
            <strong>Time: </strong>{{:moment}}<br>
            {{/if}}
            {{if activity}}
            <strong>Activity: </strong>{{:activity}} ({{:activity_category.label}})
            {{/if}}
          </p>
        </div>
      </div>
    </div>
  </div>
</script>
<h6 class="popular-suggestions-title">The final plan is</h6>
<h5 class="popular-suggestions">
  {{if activity}}
    <a href="#activities-section"><%= @gathering.finalized_plan.activity.description.try(:capitalize)%></a>
  {{/if}}
  {{if moment}}
    <%= "on" if @gathering.finalized_plan.activity %>
    <a href="#moments-section"> <%= @gathering.finalized_plan.moment.time ? render_time(@gathering.finalized_plan.moment.time): "" %></a>
  {{/if}}
  {{if place}}
    <%= "at" if (@gathering.finalized_plan.moment || @gathering.finalized_plan.activity) %>
    <a href="#places-section"><%= @gathering.finalized_plan.place.name %></a>
  {{/if}}

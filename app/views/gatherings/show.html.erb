<p id="notice"><%= notice %></p>

<div class="container col-md-12">

  <p>
    <strong>Title:</strong>
    <%= @gathering.title %>
  </p>

  <p>
    <strong>Owner:</strong>
    <%= @gathering.owner.name %>
  </p>

  <%= link_to 'Edit', edit_gathering_path(@gathering) %> |
  <%= link_to 'Back', gatherings_path %>

</div>


<div class="container">

  <div class="container col-md-2" id="collaborators">
    <%= render partial: "collaborators" , locals:{ collaborators: @collaborators, gathering: @gathering, users: @users } %>
  </div>


  <div class="container col-md-4" id="moments">
    <%= render partial: "moments" %>
  </div>

  <div class="container col-md-4" id="activities">
    <%= render partial: "activities" %>
  </div>

  <div class="container col-md-2" id="right-panel">
    <%= render partial: "places" %>
  </div>

</div>

<div class="container">

  <%= render partial: 'gatherings/add_items/all' %>

  <div class="container col-md-4">
    <%= render 'add_comment' %>
  </div>



  <div class="container col-md-6" id="comments">
    <%= render 'comments' %>
  </div>

</div>

<div class="container col-md-12">

  <div class="title-container" id="gathering-<%= @gathering.id %>" data-id="<%= @gathering.id %>">
    <h2 class="gathering-title"><%= @gathering.title %></h2>
  </div>

  <p>
    <strong>Owner:</strong>
    <%= @gathering.owner.name %>
  </p>

  <%= link_to 'Edit', edit_gathering_path(@gathering) %> |
  <%= link_to 'Back', gatherings_path %>

</div>

<div class="container">

  <div class="container col-md-2" id="collaborators">
    <%= render "collaborators_section" %>
  </div>


  <div class="container col-md-4" id="moments">
    <%= render "moments_section" %>
  </div>

  <div class="container col-md-4" id="activities">
    <%= render "activities_section" %>
  </div>

  <div class="container col-md-2" id="right-panel">
    <%= render "places_section" %>
  </div>

</div>

<div class="container">

  <div class="container col-md-2">
    <%= render 'gatherings/add_items/all' %>
  </div>

  <div class="container col-md-4">
    <%= render 'add_comment' %>
  </div>

  <div class="container col-md-6" id="comments">
    <%= render 'comments' %>
  </div>

</div>

<li class="moment-box panel panel-solid-primary" id="moment-<%= moment.id %>">
  <div class="panel-heading">
    <h3 class="panel-title"><%= moment.time.strftime('%A, %B %e') %></h3>
    <div class="actions pull-right">
      <i class="fa fa-chevron-down"></i>
      <i class="fa fa-times"><%= button_to "X", gathering_moment_path(@gathering, moment), method: :delete, remote: true, class: "hidden-button" %></i>
    </div>
  </div>
  <div class="panel-body">
    <p>
      <%= moment.user %> has suggested the following gathering time:
      <%= moment.time.strftime('%A, %B %e %Y at %I:%M %P') %>
    </p>

  </div>
  <div class="panel-footer">
    <%= render partial: '/votes/form', locals:{ votable: moment, gathering: @gathering } %>
  </div>
</li>

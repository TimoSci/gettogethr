<%= form_for [@gathering, @activity], remote: true do |f| %>

  <%= f.label :activity_category_id, class: 'hidden' %>
  <%= f.collection_select(:activity_category_id, ActivityCategory.all, :id, :label, options = { include_blank: 'Choose a type...' }, html_options = { class: 'form-control' }) %>

  <%= f.label :description, class: 'hidden' %>
  <%= f.text_field :description, :required => true, placeholder: 'e.g. Birthday Party' %>

  <%= f.submit 'Add an activity', class: 'btn' %>

<% end %>

<a href="#" class="btn cancel-button" role="button" aria-expanded="true" aria-controls="activities-form-container">Cancel</a>

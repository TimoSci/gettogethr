<%= form_for [@gathering, @activity], remote: true do |f| %>

  <%= f.label :activity_category_id, class: 'hidden' %>
  <%= f.collection_select(:activity_category_id, ActivityCategory.all, :id, :label, options = { include_blank: 'Type...' }, html_options = { class: 'form-control', :required => true } ) %>

  <%= f.label :description, class: 'hidden' %>
  <%= f.text_field :description, :required => true, class: 'form-control', placeholder: 'Activity' %>

  <%= button_tag(type: 'submit', class: 'btn btn-primary') do %>
    Add
  <% end %>

<% end %>

<a href="#" class="btn cancel-button" role="button" aria-expanded="true" aria-controls="activities-form-container">Cancel</a>
